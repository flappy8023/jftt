<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".module.login.ui.LoginActivity">
    <!--<RelativeLayout-->
    <!--android:id="@+id/welcome_root"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->

    <RelativeLayout
        android:id="@+id/rl_choose_login_logo"
        android:layout_width="@dimen/px_284"
        android:layout_height="@dimen/px_284"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px_228"
        android:background="@drawable/logo">

        <com.jmtad.jftt.customui.CircleImageView
            android:id="@+id/iv_choose_login_head"
            android:layout_width="@dimen/px_200"
            android:layout_height="@dimen/px_200"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_choose_login_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_choose_login_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px_54"
        android:text="@string/slogan1"
        android:textColor="@color/gray_4"
        android:textSize="@dimen/sp_30"
        android:visibility="visible" />


    <Button
        android:id="@+id/bt_choose_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/px_80"
        android:layout_marginTop="40dp"
        android:layout_marginRight="@dimen/px_80"
        android:layout_marginBottom="@dimen/px_250"
        android:background="@drawable/bt_choose_login_bg"
        android:gravity="center"
        android:text="@string/choose_login_wechat_direct"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="@color/black_textColor"
        android:textSize="@dimen/sp_32"
        android:visibility="invisible" />

    <Button
        android:id="@+id/bt_choose_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/px_80"
        android:layout_marginRight="@dimen/px_80"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginBottom="@dimen/px_120"
        android:background="@drawable/bt_choose_login_bg"
        android:gravity="center"
        android:text="@string/choose_login_wechat_login"
        android:textColor="@color/black_textColor"
        android:textSize="@dimen/sp_32" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/px_50"
        android:text="@string/login_copyright"
        android:textColor="@color/white" />

    <com.victor.loading.rotate.RotateLoading
        android:id="@+id/loading_view"
        android:layout_width="@dimen/px_100"
        android:layout_height="@dimen/px_100"
        android:layout_centerInParent="true"
        app:loading_color="@color/white"
        app:loading_width="@dimen/px_10" />
</RelativeLayout>