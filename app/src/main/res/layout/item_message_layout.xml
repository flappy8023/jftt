<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/message_item_bg"
    android:paddingLeft="@dimen/px_40"
    android:paddingTop="@dimen/px_24"
    android:paddingRight="@dimen/px_40"
    android:paddingBottom="@dimen/px_30">

    <TextView
        android:id="@+id/tv_item_message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="20"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_30" />

    <TextView
        android:id="@+id/tv_item_message_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/gray_2"
        android:textSize="@dimen/sp_26" />

    <TextView
        android:id="@+id/tv_item_message_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_message_title"
        android:layout_marginTop="@dimen/px_24"
        android:textColor="@color/gray_textColor"

        android:textSize="@dimen/sp_30" />
</RelativeLayout>