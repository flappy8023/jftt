<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px_150"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.jmtad.jftt.customui.CircleImageView
        android:id="@+id/item_home_header_img"
        android:layout_width="@dimen/px_84"
        android:layout_height="@dimen/px_84" />

    <TextView
        android:id="@+id/item_home_header_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_20"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_26" />
</LinearLayout>