<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".module.setting.SettingActivity">

    <include layout="@layout/toolbar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/profile_bg_color"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/px_40"
            android:background="@drawable/profile_content_bg"
            android:orientation="vertical"
            android:paddingLeft="@dimen/px_42"
            android:paddingRight="@dimen/px_42"
            android:paddingBottom="@dimen/px_60">

            <RelativeLayout
                android:id="@+id/ll_setting_aboutUs"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_100">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_about_us"
                    android:textColor="@color/black_textColor"
                    android:textSize="@dimen/sp_32" />

                <ImageView
                    android:layout_width="@dimen/px_28"
                    android:layout_height="@dimen/px_28"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/gray_1" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_setting_feedback"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_100">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_feedback"
                    android:textColor="@color/black_textColor"
                    android:textSize="@dimen/sp_32" />

                <ImageView
                    android:layout_width="@dimen/px_28"
                    android:layout_height="@dimen/px_28"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/gray_1" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_setting_clear_cache"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_100">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_clear_cache"
                    android:textColor="@color/black_textColor"
                    android:textSize="@dimen/sp_32" />

                <TextView
                    android:id="@+id/tv_total_cache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="2.31M"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_24" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/gray_1" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_setting_check_update"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_100">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_check_update"
                    android:textColor="@color/black_textColor"
                    android:textSize="@dimen/sp_32" />

                <!--<ImageView-->
                <!--android:layout_width="@dimen/px_28"-->
                <!--android:layout_height="@dimen/px_28"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:src="@drawable/right" />-->

                <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:background="@color/gray_1" />-->
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/bt_switch_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_90"
            android:layout_marginLeft="@dimen/px_40"
            android:layout_marginTop="@dimen/px_40"
            android:layout_marginRight="@dimen/px_40"
            android:background="@drawable/setting_bt_switch_account"
            android:text="@string/setting_switch_account"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_30" />
    </LinearLayout>

</LinearLayout>