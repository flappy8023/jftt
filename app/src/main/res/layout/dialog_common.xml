<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/dialog_bg"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px_40"
        android:textColor="@color/black_textColor"
        android:textSize="@dimen/sp_36" />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="@dimen/px_70"
        android:gravity="center"
        android:textColor="@color/dialog_gray_textColor"
        android:textSize="@dimen/sp_30" />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90"
        android:layout_below="@id/content"
        android:layout_marginTop="@dimen/px_70"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginBottom="@dimen/px_40"
        android:background="@drawable/bt_choose_login_bg"
        android:textColor="@color/black_textColor"
        android:textSize="@dimen/sp_28" />
</RelativeLayout>